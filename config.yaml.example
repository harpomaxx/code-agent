# Example configuration file for code-agent
# Copy this file to config.yaml and modify as needed

# LLM configuration
llm:
  # LLM provider (openai, custom)
  provider: "openai"
  
  # API key for the provider
  # You can also set this via the LLM_API_KEY environment variable
  api_key: "your-openai-api-key-here"
  
  # Base URL for custom providers (optional)
  # Leave null for OpenAI, set to custom endpoint for other providers
  # Examples:
  # - "https://api.openai.com/v1" (OpenAI - default)
  # - "https://api.anthropic.com/v1" (Anthropic Claude)
  # - "http://localhost:8000/v1" (local server)
  base_url: "https://api.openai.com/v1" 
  
  # Request timeout in seconds
  timeout: 30
  
  # Default model to use
  default_model: "gpt-4o-mini"

# ReAct agent configuration
agent:
  # Maximum iterations for ReAct loop
  max_iterations: 10
  
  # Maximum retries for failed requests
  max_retries: 3

# Logging configuration
logging:
  # Enable LLM communication logging
  enabled: true
  
  # Directory for log files (optional)
  log_dir: "~/.code-agent/logs"
  
  # Specific log file name (optional)
  # log_file: "custom_log.jsonl"
  
  # Maximum log file size in bytes (10MB default)
  max_file_size: 10485760
  
  # Maximum number of rotated log files
  max_files: 10
